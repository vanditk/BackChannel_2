<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error ") %> User can vote only once:</h2>

          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :category_id %><br />

      <%
         @categoryNames = []
         Category.all.each do |x|
         @categoryNames << [x.name,x.id]
           end

      %>
      <%#= select(:post, :category, @categoryNames) %>
      <%= f.select(:category_id, @categoryNames) %>
    </div>


    <div class="field">
      <%= f.label :post %><br />
      <%= f.text_field :post %>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
