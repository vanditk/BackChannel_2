
<br/><div id =1>

  <b>Post: </b> <br/>
  <%= @post.post %>
  <br/>
  <b>Category:</b>
  <%= @post.category %>
  <br/>
  <td> <%=link_to 'show votes', posts_showvotes_path(:id=>@post.postid)  %></td>
</div>
<br/>
<div id =2>
<table>
    <th>Comments</th> <th>weight</th> <th>Votes</th> <th></th><th></th>
  <%@comments = Post.find(:all, :conditions => "id != #{@post.postid} and postid ==  #{@post.postid} and pcid==1") %>
  <%@comments.each do |comments|%>
      <tr>
        <td> <%= comments.post %></td>
        <td><%=comments.weight %> </td>
      <td><%=link_to 'show Votes', posts_showvotes_path(:id=>comments)  %></td>
      <%#session[:pid] = comments.id%>
      <% if (session[:admin].to_s == "Admin") or (session[:user_id].to_s == comments.userid.to_s) %>

          <td><%= link_to 'Edit', edit_post_path(comments) %></td>

          <td><%= link_to 'Destroy', comments, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      <%end%>
      <% if !(session[:user_id].to_s == comments.userid.to_s) %>
          <td><%= link_to 'Vote', posts_incvote_path(:id=>comments.id) %></td>
      <% end %>


  <%end%>
  </table>

  <%session[:pid] = @post.id%>

  </div>
