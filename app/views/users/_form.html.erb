<%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br /><br />
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br /><br />
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br /><br />
    <% if session[:admin].to_s == "Admin" %>
        <%= f.label :role %>
        <%= f.password_field :role %>
    <% end %>
    <br /><br />
    <%= f.submit %>
    <br /><br />
<%end%>